        </ul>
      </div>
    </div>
  </nav>
 <div class="container mt-5">
        <!-- Barra de búsqueda de Bootstrap -->
        <div class="input-group mb-3">
            <button class="btn btn-primary" id="AddUser"><i class="fas fa-user-plus"></i></button>
            <input type="text" class="form-control" id="searchI" placeholder="Buscar usuario por nombre o email" aria-label="Buscar usuario" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-success" type="button"><i class="fas fa-search"></i></button>
            </div>
        </div>


        <!-- Tabla de datos ingresados -->
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="tabla">
                <!-- aqui se muestran los datos -->
            </tbody>
        </table>
    </div>

    <!-- Ventana emergente  -->
    <div class="overlay" id="overlay"></div>
    <div class="add-user-popup" id="add">
        <button class="btn-close close-button" id="closeButton" aria-label="Cerrar"><i class="fas fa-times"></i></button>
        <h2 class="text-center mb-4">Agregar cliente</h2>
        <!-- Formulario para agregar usuario -->
        <form>
            <div class="mb-3 row">
                <div class="col">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre">
                </div>
                <div class="col">
                    <label for="apellido" class="form-label">Apellido:</label>
                    <input type="text" class="form-control" id="apellido" placeholder="Apellido">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col">
                    <label for="telefono" class="form-label">Teléfono:</label>
                    <input type="tel" class="form-control" id="telefono" placeholder="Teléfono">
                </div>
                <div class="col">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <button type="button" class="btn btn-success" id="addB">Agregar</button>
        </form>
    </div>

    <script src="build/js/clientes.js"></script>
    <script src="build/js/funciones.js"></script>

</body>
</html>
