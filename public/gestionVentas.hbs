  <h2 class="text txt-center"> Pagos realizados por los clientes</h2>
   <div class="container mt-5">
        <!-- Barra de búsqueda de Bootstrap -->
        <div class="input-group mb-3">
           <button class="btn btn-primary" id="showAddUserForm"><i class="fas fa-user-plus"></i></button>
            <input type="text" class="form-control" id="searchInput" placeholder="Buscar por nombre de usuario" aria-label="Buscar usuario" aria-describedby="basic-addon2">
            <div class="input-group-append" id="searchInput">
                <button class="btn btn-outline-info" type="button"><i class="fas fa-search" ></i></button>
            </div>
        </div>

       

        <!-- Tabla de datos ingresados -->
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Usuario del cliente</th>
                    <th>Pago</th>
                    <th>Tipo de servicio</th>
                    <th>Forma de pago</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="userTable">
                <!-- aqui se muestran los datos -->
            </tbody>
        </table>
    </div>

    <!-- Ventana emergente  -->
    <div class="overlay" id="overlay"></div>
    <div class="add-user-popup" id="addUserPopup">
        <button class="btn-close close-button" id="closeButton" aria-label="Cerrar"><i class="fas fa-times"></i></button>
        <h2 class="text-center mb-4">Agregar cliente</h2>
        <!-- Formulario para agregar usuario -->
        <form>
            <div class="mb-3 row">
                <div class="col">
                    <label for="usuario" class="form-label">Nombre de usuario:</label>
                    <input type="text" class="form-control" id="usuario" placeholder="usuario">
                </div>
                <div class="col">
                    <label for="pago" class="form-label">Pago:</label>
                    <input type="text" class="form-control" id="pago" placeholder="$pago">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col">
                    <label for="tipservicio" class="form-label">Tipo de servicio:</label>
                    <input type="text" class="form-control" id="tipservicio" placeholder="servicio">
                </div>
                <div class="col">
                    <label for="formpago" class="form-label">Forma de pago:</label>
                    <input type="text" class="form-control" id="formpago" placeholder="forma de pago">
                </div>
            </div>
            <button type="button" class="btn btn-success" id="addUserButton">Agregar</button>
        </form>
    </div>





  <h2 class="text txt-center">Reporte de servicios atendidos</h2>
   <div class="container mt-5">
        <!-- Barra de búsqueda de Bootstrap -->
        <div class="input-group mb-3">
            <button class="btn btn-primary" id="icon"><i class="fas fa-user-plus" ></i></button>
            <input type="text" class="form-control" id="search" placeholder="Buscar por nombre de usuario" aria-label="Buscar usuario" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-danger" type="button"><i class="fas fa-search"></i></button>
            </div>
        </div>


        <!-- Tabla de datos ingresados -->
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Usuario del cliente</th>
                    <th>Usuario del barbero</th>
                    <th>Tipo de servicio</th>
                    <th>Pago</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="table">
                <!-- aqui se muestran los datos -->
            </tbody>
        </table>
    </div>

    <!-- Ventana emergente  -->
    <div class="overlay" id="overlay"></div>
    <div class="add-user-popup" id="addPopup">
        <button class="btn-close close-button" id="close" aria-label="Cerrar"><i class="fas fa-times"></i></button>
        <h2 class="text-center mb-4">Agregar cliente</h2>
        <!-- Formulario para agregar usuario -->
        <form>
            <div class="mb-3 row">
                <div class="col">
                    <label for="user" class="form-label">Nombre de usuario:</label>
                    <input type="text" class="form-control" id="user" placeholder="usuario">
                </div>
               <div class="col">
                    <label for="barber" class="form-label">Nombre de barbero:</label>
                    <input type="text" class="form-control" id="barber" placeholder="Nombre de barbero">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col">
                    <label for="service" class="form-label">Tipo de servicio:</label>
                    <input type="text" class="form-control" id="service" placeholder="servicio">
                </div>
                <div class="col">
                    <label for="Payments" class="form-label">Pago:</label>
                    <input type="text" class="form-control" id="Payments" placeholder="$pago">
                </div>
            </div>
            <button type="button" class="btn btn-success" id="addButton">Agregar</button>
        </form>
    </div>


